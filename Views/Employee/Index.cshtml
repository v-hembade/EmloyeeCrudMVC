@model  List<EmployeeManagement.Models.Employee>;

<h1>Employees</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date Of Birth</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.salary</td>
                <td>@employee.DateOfBirth</td>
                <td>@employee.Department</td>
                <td><a href="Employee/Details/@employee.Id" class="btn btn-primary">Details</a></td>
                <td><a href="Employee/Edit/@employee.Id" class="btn btn-primary">Edit</a></td>
               
            </tr>
        }

    </tbody>
</table>
